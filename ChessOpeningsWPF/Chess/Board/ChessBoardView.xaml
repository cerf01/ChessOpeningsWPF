<UserControl x:Class="ChessOpeningsWPF.Chess.Board.ChessBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessOpeningsWPF.Chess.Board"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <UserControl.Background>
        <ImageBrush ImageSource="\Chess\Board\AssetsSource\Assets\Board.png"/>
    </UserControl.Background>

    <Grid >
        <UniformGrid x:Name="GameBoard" Rows="8" Columns="8" RenderOptions.BitmapScalingMode="HighQuality">
          
        </UniformGrid>
    </Grid>
    
</UserControl>
