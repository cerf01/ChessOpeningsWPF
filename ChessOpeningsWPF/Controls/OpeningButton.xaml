<UserControl x:Class="ChessOpeningsWPF.Controls.OpeningButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessOpeningsWPF.Controls"
             mc:Ignorable="d" 
             MouseEnter="UserControl_MouseEnterOrLeave" 
             MouseLeave="UserControl_MouseEnterOrLeave" 
             MouseUp="UserControl_MouseLeftButtonUp">
    <Border CornerRadius="5" x:Name="ContentBorder"  Background="#E0E0E0" Cursor="Hand" Margin="6">
        <Grid MinHeight="38" Margin="4">
            <TextBlock x:Name="Title" Text="Title" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Height="18"/>
        </Grid>
    </Border>
</UserControl>
