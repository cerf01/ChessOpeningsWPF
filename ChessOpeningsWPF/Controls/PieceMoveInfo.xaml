<UserControl x:Class="ChessOpeningsWPF.Controls.PieceMoveInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessOpeningsWPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="500">
    <Border Background="#f7d19e" BorderBrush="#762602" BorderThickness="5" CornerRadius="5" Padding="10" Margin="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="Label" Grid.Row="0" Name="Label_Move" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="26" Foreground="#FF762602" />
            <TextBlock x:Name="TxtBlck_Description" Grid.Row="1" Text="Description" Padding="10" FontSize="20" Foreground="#FF762602" TextWrapping="Wrap"/>
            <Image x:Name="Img_ImageForDscrp" Grid.Row="2"/>
        </Grid>
    </Border>
</UserControl>
